{
  "name": "basic-react",
  "version": "1.0.0",
  "description": "Setup a react site from scratch",
  "author": "Hendri Pretorius",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist/",
    "lint": "tslint src/*.ts* src/**/*.ts",
    "tsc": "tsc",
    "babel": "babel dist/ -d dist/",
    "postbabel": "cp src/*.css dist/",
    "bundle": "browserify -t browserify-css dist/index.js -o dist/bundle.js",
    "bundle-prod": "NODE_ENV=production browserify -t browserify-css -t browserify-shim -g envify -g uglifyify dist/index.js | uglifyjs --compress --mangle > dist/bundle.prod.js"
  },
  "browserify-shim": {
    "react": "global:React",
    "react-dom": "global:ReactDOM"
  },
  "dependencies": {
    "react": "16.2.0",
    "react-dom": "16.2.0"
  },
  "devDependencies": {
    "@types/react": "16.0.38",
    "@types/react-dom": "16.0.4",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "browserify": "16.1.0",
    "browserify-css": "0.14.0",
    "browserify-shim": "3.8.14",
    "envify": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "uglify-js": "3.3.12",
    "uglifyify": "4.0.5"
  }
}
